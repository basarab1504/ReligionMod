    <filthLeaving>Filth_RubbleBuilding</filthLeaving>
    <statBases>
      <SellPriceFactor>0.70</SellPriceFactor>
    </statBases>
  <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <comps>
      <li Class="CompProperties_RoomIdentifier">
