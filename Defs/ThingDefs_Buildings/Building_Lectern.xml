<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef Name="LecternBase" ParentName="BuildingBase" Abstract="True">
    <canOverlapZones>false</canOverlapZones>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <statBases>
      <Mass>20</Mass>
    </statBases>
    <building>
      <workSpeedPenaltyOutdoors>true</workSpeedPenaltyOutdoors>
      <workSpeedPenaltyTemperature>true</workSpeedPenaltyTemperature>
      <joyKind>PrayingKind</joyKind>
    </building>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <interactionCellIcon>DiningChair</interactionCellIcon>     
    <placeWorkers>
      <li>PlaceWorker_WatchArea</li>
    </placeWorkers>
    <designationCategory>ReligionBuildings</designationCategory>
  </ThingDef>

  <ThingDef ParentName="LecternBase">
    <defName>Lectern</defName>
    <label>Lectern</label>
    <description>Lectern to read from liturgical books during the divine services.</description>
    <thingClass>Religion.Building_Lectern</thingClass>
    <graphicData>
      <texPath>Things/Religion/Lectern</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1,1)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <costStuffCount>75</costStuffCount>
    <costList>
      <WoodLog>20</WoodLog>
    </costList>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <JoyGainFactor>1.2</JoyGainFactor>
    </statBases>
    <size>(1,1)</size>
    <passability>PassThroughOnly</passability>
    <pathCost>60</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <building>
      <watchBuildingStandDistanceRange>
        <min>1</min>
        <max>8</max>
      </watchBuildingStandDistanceRange>
      <watchBuildingStandRectWidth>6</watchBuildingStandRectWidth>
    </building> 
    <designationHotKey>Misc4</designationHotKey>
    <tickerType>Rare</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
  </ThingDef>
</Defs>